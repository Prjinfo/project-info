def creerImgBlancNoir(h,l):                                                                                                                                            
 base=np.zeros((h,l))                                                                                                                                                  
 for i in range(h):                                                                                                                                                    
  for j in range(l):                                                                                                                                                   
   base[i, j]=(i+j)%2                                                                                                                                                  
 return base
